<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.operatingsystems.EvaluateView">
   <children>
      <Button fx:id="evaluateButton" layoutX="252.0" layoutY="93.0" mnemonicParsing="false" onAction="#onEvaluateClick" prefHeight="28.0" prefWidth="96.0" text="Evaluate">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Label fx:id="titleLabel" layoutX="202.0" layoutY="23.0" text="Expression Evaluator">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <TextField fx:id="textInput" layoutX="161.0" layoutY="60.0" prefHeight="25.0" prefWidth="275.0" promptText="Enter expression here" />
      <Label fx:id="outputLabel" alignment="TOP_CENTER" layoutX="73.0" layoutY="178.0" prefHeight="187.0" prefWidth="453.0" text="Output will appear here!">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label fx:id="stepsLabel" alignment="TOP_CENTER" layoutX="226.0" layoutY="147.0" prefHeight="21.0" prefWidth="145.0" text="Steps and Solution">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
